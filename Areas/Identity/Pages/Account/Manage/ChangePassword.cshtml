@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h3 class="text-primary">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-12">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form mb-3">
                <label asp-for="Input.OldPassword" class="form-label text-primary"></label>
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true"  />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form mb-3">
                <label asp-for="Input.NewPassword" class="form-label text-primary"></label>
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true"  />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label text-primary"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-50 btn btn-lg btn-outline-primary-a" style="height: 50px;">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
