@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
	<div class="col-md-12">
		<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
			<h2>Create a new account.</h2>
			<hr />
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="form-floating">
				<input asp-for="Input.FirstName" class="form-control" autocomplete="firstname" aria-required="true" />
				<label asp-for="Input.FirstName"></label>
				<span asp-validation-for="Input.FirstName" class="text-danger"></span>
			</div>
			<br />
			<div class="form-floating">
				<input asp-for="Input.LastName" class="form-control" autocomplete="lastname" aria-required="true" />
				<label asp-for="Input.LastName"></label>
				<span asp-validation-for="Input.LastName" class="text-danger"></span>
			</div>
			<br />
			<div class="form-floating">
				<input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
				<label asp-for="Input.Email">Email</label>
				<span asp-validation-for="Input.Email" class="text-danger"></span>
			</div>
			<br />
			<div class="form-floating">
				<input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
				<label asp-for="Input.Password">Password</label>
				<span asp-validation-for="Input.Password" class="text-danger"></span>
			</div>
			<br />
			<div class="form-floating">
				<input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
				<label asp-for="Input.ConfirmPassword">Confirm Password</label>
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<br />
			<div class="form-group form-check col-md-10">
				<input type="checkbox" asp-for="Input.RegisterAsCoach" class="form-check-input" id="registerAsCoachCheckbox" />
				<label class="form-check-label" asp-for="Input.RegisterAsCoach">&nbsp;<strong>I am a coach.</strong></label>
				<span asp-validation-for="Input.RegisterAsCoach" class="text-danger"></span>
			</div>
			<div class="form-group form-check col-md-10">
				<input type="checkbox" asp-for="Input.AcceptedRodo" class="form-check-input" id="acceptedRodoCheckbox" />
				<label class="form-check-label" asp-for="Input.AcceptedRodo">
					&nbsp;
					<strong>
						I consent to the processing of my personal data in accordance with the General Data Protection Regulation (GDPR) for the purpose of account creation and service provision.<span class="text-danger"> *</span>
					</strong>
				</label>
				<span asp-validation-for="Input.AcceptedRodo" class="text-danger"></span>
			</div>
			<div class="form-group form-check col-md-10">
				<input type="checkbox" asp-for="Input.AcceptedPrivacy" class="form-check-input" id="acceptedPrivacyCheckbox" />
				<label class="form-check-label" asp-for="Input.AcceptedPrivacy">
					&nbsp;
					<strong>
						I acknowledge that I have read the Privacy Policy and Terms of Service and agree to their terms.<span class="text-danger"> *</span>
					</strong>
				</label>
				<br />
				<span asp-validation-for="Input.AcceptedPrivacy" class="text-danger"></span>
			</div>
			<button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
		</form>
	</div>

</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
