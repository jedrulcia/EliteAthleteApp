@using EliteAthleteApp.Models.TrainingOrm

@model IEnumerable<TrainingOrmVM>

@{
	ViewData["Title"] = "List";
}

<table class="table table-dark" style="width:100%">
	<thead>
		<tr>
			<th class="text-start">
				@Html.DisplayNameFor(model => model.DateTime)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.BenchPressOrm)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.OverheadPressOrm)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SquatOrm)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DeadliftOrm)
			</th>
			<th>
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td class="text-start">
					@Html.DisplayFor(modelItem => item.DateTime)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.BenchPressOrm)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.OverheadPressOrm)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.SquatOrm)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DeadliftOrm)
				</td>
				<td class="text-end">
					<div class="dropdown">
						<button class="btn btn-outline-primary-a btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
							<strong>Actions</strong>
						</button>
						<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							<li>
								<button data-trainingormid="@item.Id"
										class="dropdown-item editOrmBtn">
									<i class="bi bi-pencil">&nbsp;</i>Edit
								</button>
							</li>
							<li>
								<button data-trainingormid="@item.Id"
										class="dropdown-item deleteOrmBtn">
									<i class="bi bi-trash">&nbsp;</i>Delete
								</button>
							</li>
						</ul>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>