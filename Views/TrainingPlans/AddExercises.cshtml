@model TrainingPlanCreateVM

@{
	ViewData["Title"] = "AddExercises";
}

<h1>Manage Exercises</h1>

<div class="row">
	<div class="col-md-12">
		<form asp-action="AddExercises">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group col-md-4">
				<label asp-for="Exercise" class="control-label"></label>
				<select asp-for="Exercise" asp-items="Model?.AvailableExercises" class="form-select">
					<option>Select exercise</option>
				</select>
				<span asp-validation-for="Exercise" class="text-danger"></span>
			</div>
			<div class="form-group col-md-12">
				<label asp-for="Weight" class="control-label"></label>
				<input asp-for="Weight" class="form-control" />
				<span asp-validation-for="Weight" class="text-danger"></span>
			</div>
			<div class="form-group col-md-12">
				<label asp-for="Sets" class="control-label"></label>
				<input asp-for="Sets" class="form-control" />
				<span asp-validation-for="Sets" class="text-danger"></span>
			</div>
			<div class="form-group col-md-12">
				<label asp-for="Repeats" class="control-label"></label>
				<input asp-for="Repeats" class="form-control" />
				<span asp-validation-for="Repeats" class="text-danger"></span>
			</div>
			<div class="form-group col-md-12">
				<label asp-for="Index" class="control-label"></label>
				<input asp-for="Index" class="form-control" />
				<span asp-validation-for="Index" class="text-danger"></span>
			</div>
			<div class="form-group">
				@if (Model.RedirectToAdmin)
				{
					<a asp-action="IndexAdmin" class="btn btn-dark">Back to List</a>
				}
				else if (!Model.RedirectToAdmin)
				{
					<a asp-action="Index" class="btn btn-dark">Back to List</a>
				}
				&nbsp;
				<input type="submit" value="Add" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>



<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Exercises)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@for (int i = 0; i < Model.Exercises.Count; i++)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => Model.Exercises[i].Name)
				</td>
				<td class="text-end">
					<button data-trainingplanid="@Model.Id" data-index="@i" class="btn btn-danger btn-sm deleteBtn" type="button"><i class="fa-solid fa-trash">&nbsp;</i>Delete</button>
				</td>
			</tr>
		}
	</tbody>
</table>

<form id="deleteForm" asp-action="RemoveExercise">
	<input type="hidden" id="trainingPlanId" name="trainingPlanId" />
	<input type="hidden" id="index" name="index" />
</form>

@section Scripts
{
	<script>
		$(function () {
			$('.table').DataTable();

			$('.deleteBtn').click(function (e) {
				swal(
					{
						title: "Are you sure?",
						text: "Are you sure you want to delete this record?",
						icon: "warning",
						buttons: true,
						dangerMode: true
					}
				).then((confirm) => {
					if (confirm) {
						var btn = $(this);
						var trainingPlanId = btn.data("trainingplanid");
						var index = btn.data("index");
						$('#trainingPlanId').val(trainingPlanId);
						$('#index').val(index);
						$('#deleteForm').submit();
					}
				}
				);
			});
		});
	</script>
}
