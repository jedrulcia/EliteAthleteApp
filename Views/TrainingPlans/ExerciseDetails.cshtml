@model TrainingPlanExerciseVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details of @Model.Name </h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dd class="col-sm-12">
            @{
                var additionalVideoUrl = Model.VideoLink;
                var additionalVideoId = additionalVideoUrl.Split(new[] { "v=" }, StringSplitOptions.None)[1];
                var additionalEmbedUrl = "https://www.youtube.com/embed/" + additionalVideoId;
            }
            <iframe width="560" height="315" src="@additionalEmbedUrl" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OverallNumberOfSets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OverallNumberOfSets)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<br />
<div>
    <a asp-action="Details" asp-route-id="@Model.TrainingPlanId" asp-controller="TrainingPlans" class="btn btn-dark">Back to plan</a> &nbsp;
</div>
