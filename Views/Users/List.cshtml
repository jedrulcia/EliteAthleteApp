@using EliteAthleteApp.Models.User
@model List<UserVM>

@{
	ViewData["Title"] = "List";
	var errorMessage = TempData["ErrorMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
	<div class="alert alert-danger">
		@errorMessage
	</div>
}

<form asp-action="AddAthlete" asp-controller="Users" method="post">
	<div class="form-group">
		<input type="hidden" id="athleteCount" value="@Model.Count" />
		<input type="hidden" id="athleteCount" name="athleteCount" value="@Model.Count" />
		<label for="inviteCode">Invite Code</label>
		<input type="text" class="form-control" id="inviteCode" name="InviteCode" required />
	</div>
	<button type="submit" class="btn btn-primary mt-2">Add</button>
</form>

<h1>Athletes</h1>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.First().FirstName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.First().LastName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.First().Email)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.FirstName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.LastName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Email)
				</td>
				<td class="text-end">
					<a asp-action="Panel" class="btn btn-secondary" asp-controller="Users" asp-route-userId="@item.Id"><i class="fa-solid fa-list"></i> User Panel</a>
					<a asp-action="Chat" asp-route-userId="@item.Id" asp-controller="Users" class="btn btn-sm btn-danger">Chat</a>
				</td>
			</tr>
		}
	</tbody>
</table>

@section Scripts
{
	<script>
		$(function () {
			$('.table').DataTable();
		});
	</script>
}
