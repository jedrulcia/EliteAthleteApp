@    using EliteAthleteApp.Models.Admin

@model AdminSendEmailVM


@{
	ViewData["Title"] = "SendEmail";
}

<div class="row">
	<form asp-action="SendEmail">
		<input type="hidden" asp-for="@Model.UserId" name="UserId" />
		<div class="form-group col-md-12">
			<label asp-for="Subject" class="control-label"></label>
			<input asp-for="Subject" class="form-control">
			<span asp-validation-for="Subject" class="text-danger"></span>
		</div>
		<div class="form-group col-md-12">
			<label asp-for="Message" class="control-label"></label>
			<textarea asp-for="Message" class="form-control"></textarea>
			<span asp-validation-for="Message" class="text-danger"></span>
		</div>
		<div class="modal-footer text-end">
			<button type="submit" class="btn btn-dark">Send Email</button>
		</div>
	</form>
</div>
