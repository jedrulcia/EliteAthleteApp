@using EliteAthleteApp.Models.UserBodyAnalysis

@model IEnumerable<UserBodyAnalysisVM>

@{
	ViewData["Title"] = "List";
}
<div class="card">
	<div class="card-body">
		<canvas id="ubaChart" width="800" height="200"></canvas>
	</div>
</div>

<table class="table table-dark" style="width:100%">
	<thead>
		<tr>
			<th class="text-start">
				@Html.DisplayNameFor(model => model.DateTime)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Weight)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FatPercentage)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MusclePercentage)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.WaterPercentage)
			</th>
			<th>
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td class="text-start">
					@Html.DisplayFor(modelItem => item.DateTime)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Weight)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FatPercentage)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MusclePercentage)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.WaterPercentage)
				</td>
				<td class="text-end">
					<div class="dropdown">
						<button class="btn btn-outline-primary-a btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
							<strong>Actions</strong>
						</button>
						<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							<li>
								<button data-editubaid="@item.Id"
										class="dropdown-item editUbaBtn">
									<i class="bi bi-pencil">&nbsp;</i>Edit
								</button>
							</li>
							<li>
								<button data-deleteubaid="@item.Id"
										class="dropdown-item deleteUbaBtn">
									<i class="bi bi-trash">&nbsp;</i>Delete
								</button>
							</li>
							<li>
								<button data-mediaubaurl="@item.FileUrl"
										class="dropdown-item mediaUbaBtn">
									<i class="fa-solid fa-image"></i>Media
								</button>
							</li>
						</ul>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>