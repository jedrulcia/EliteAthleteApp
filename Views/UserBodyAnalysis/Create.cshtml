@using EliteAthleteApp.Models.UserBodyAnalysis

@model UserBodyAnalysisCreateVM

@{
	ViewData["Title"] = "Create";
}

<form asp-action="Create" enctype="multipart/form-data">
	<input type="hidden" asp-for="UserId" />
	<input type="hidden" asp-for="CreatedToday" />
	<input type="hidden" asp-for="CreationDate" value="@DateTime.Now" />
	<div class="container">
		<div class="row">
			<div class="col-md-3 form-group">
				<strong><label asp-for="Weight" class="control-label"></label></strong>
				<input asp-for="Weight" class="form-control" />
				<span asp-validation-for="Weight" class="text-danger"></span>
			</div>
			<div class="col-md-3 form-group">
				<strong><label asp-for="FatPercentage" class="control-label"></label></strong>
				<input asp-for="FatPercentage" class="form-control" />
				<span asp-validation-for="FatPercentage" class="text-danger"></span>
			</div>
			<div class="col-md-3 form-group">
				<strong><label asp-for="MusclePercentage" class="control-label"></label></strong>
				<input asp-for="MusclePercentage" class="form-control" />
				<span asp-validation-for="MusclePercentage" class="text-danger"></span>
			</div>
			<div class="col-md-3 form-group">
				<strong><label asp-for="WaterPercentage" class="control-label"></label></strong>
				<input asp-for="WaterPercentage" class="form-control" />
				<span asp-validation-for="WaterPercentage" class="text-danger"></span>
			</div>
		</div>
		<div class="row align-items-end">
			<div class="form-group col-md-4">
				<strong><label asp-for="DateTime" class="control-label"></label></strong>
				<input asp-for="DateTime" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
				<span asp-validation-for="DateTime" class="text-danger"></span>
			</div>
			<div class="form-group col-md-4">
				<div class="media-upload-box">
					<label for="fileUpload" class="upload-icon">⬆</label>
					<input type="file" name="fileUpload" id="fileUpload" class="d-none" accept="image/*,application/pdf" />
				</div>
			</div>
			<div class="form-group col-md-4 text-end">
				<button type="submit" class="btn btn-outline-primary-a"><strong>Create</strong></button>
			</div>
		</div>
	</div>
</form>