@model IEnumerable<MealIndexVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Meals</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa-solid fa-plus">&nbsp;</i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kcal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Proteins)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carbohydrates)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kcal)
                </td>
                <td>
                    @item.Proteins.ToString("F1")
                </td>
                <td>
                    @item.Carbohydrates.ToString("F1")
                </td>
                <td>
                    @item.Fats.ToString("F1")
                </td>
                <td class="text-end">
                    <a asp-action="ManageIngredients" class="btn btn-primary btn-sm" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square">&nbsp;</i>Ingredients</a>
                    <a asp-action="Edit" class="btn btn-secondary btn-sm" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square">&nbsp;</i>Edit</a>
                    <a asp-action="Details" class="btn btn-secondary btn-sm" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info">&nbsp;</i>Details</a>
                    <button data-id="@item.Id" class="btn btn-danger btn-sm deleteBtn" type="button"><i class="fa-solid fa-trash">&nbsp;</i>Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="mealId" name="Id" />
</form>

@section Scripts
{
    <script>
        $(function () {
            $('.table').DataTable();

            $('.deleteBtn').click(function (e) {
                swal(
                    {
                        title: "Are you sure?",
                        text: "Are you sure you want to delete this record?",
                        icon: "warning",
                        buttons: true,
                        dangerMode: true
                    }
                ).then((confirm) => {
                    if (confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#mealId').val(id);
                        $('#deleteForm').submit();
                    }
                }
                );
            });
        });
    </script>
}