@using EliteAthleteAppShared.Models.UserBodyMeasurements

@model UserBodyMeasurementsCreateVM

@{
	ViewData["Title"] = "Edit";
}

<form asp-action="Edit">
	<input type="hidden" asp-for="UserId" />
	<input type="hidden" asp-for="Id" />
	<div class="container">
		<div class="row">
			<div class="col-md-4 form-group">
				<strong><label asp-for="Chest" class="control-label"></label></strong>
				<input asp-for="Chest" class="form-control" />
				<span asp-validation-for="Chest" class="text-danger"></span>
			</div>
			<div class="col-md-4 form-group">
				<strong><label asp-for="Arms" class="control-label"></label></strong>
				<input asp-for="Arms" class="form-control" />
				<span asp-validation-for="Arms" class="text-danger"></span>
			</div>
			<div class="col-md-4 form-group">
				<strong><label asp-for="Waist" class="control-label"></label></strong>
				<input asp-for="Waist" class="form-control" />
				<span asp-validation-for="Waist" class="text-danger"></span>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4 form-group">
				<strong><label asp-for="Thighs" class="control-label"></label></strong>
				<input asp-for="Thighs" class="form-control" />
				<span asp-validation-for="Thighs" class="text-danger"></span>
			</div>
			<div class="col-md-4 form-group">
				<strong><label asp-for="Hips" class="control-label"></label></strong>
				<input asp-for="Hips" class="form-control" />
				<span asp-validation-for="Hips" class="text-danger"></span>
			</div>
			<div class="form-group col-md-4">
				<strong><label asp-for="DateTime" class="control-label"></label></strong>
				<input asp-for="DateTime" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
				<span asp-validation-for="DateTime" class="text-danger"></span>
			</div>
		</div>
		<div class="row align-items-end">
			<div class="form-group col-md-12 text-end">
				<button type="submit" class="btn btn-outline-primary-a"><strong>Save</strong></button>
			</div>
		</div>
	</div>
</form>