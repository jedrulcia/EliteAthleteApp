@using EliteAthleteApp.Models.UserBodyMeasurements

@model IEnumerable<UserBodyMeasurementsVM>

@{
	ViewData["Title"] = "List";
}
<div class="card">
	<div class="card-body">
		<canvas id="ubmChart" width="800" height="200"></canvas>
	</div>
</div>

<table class="table table-dark" style="width:100%">
	<thead>
		<tr>
			<th class="text-start">
				@Html.DisplayNameFor(model => model.DateTime)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Chest)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Arms)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Waist)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Thighs)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Hips)
			</th>
			<th>
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td class="text-start">
					@Html.DisplayFor(modelItem => item.DateTime)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Chest)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Arms)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Waist)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Thighs)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Hips)
				</td>
				<td class="text-end">
					<div class="dropdown">
						<button class="btn btn-outline-primary-a btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
							<strong>Actions</strong>
						</button>
						<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							<li>
								<button data-editubmid="@item.Id"
										class="dropdown-item editUbmBtn">
									<i class="bi bi-pencil">&nbsp;</i>Edit
								</button>
							</li>
							<li>
								<button data-deleteubmid="@item.Id"
										class="dropdown-item deleteUbmBtn">
									<i class="bi bi-trash">&nbsp;</i>Delete
								</button>
							</li>
						</ul>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>