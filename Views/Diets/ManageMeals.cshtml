@model TrainingPlanApp.Web.Models.DietManageMealsVM

@{
	ViewData["Title"] = "ManageMeals";
}

<h1>ManageMeals</h1>

<div>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th></th>
				<th>Monday</th>
				<th>Tuesday</th>
				<th>Wednesday</th>
				<th>Thursday</th>
				<th>Friday</th>
				<th>Saturday</th>
				<th>Sunday</th>
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < 5; i++)
			{
				<tr>
					<td>
						@if (i == 0)
						{
							<text>BREAKFAST</text>
						}
						else if (i == 1)
						{
							<text>II BREAKFAST</text>
						}
						else if (i == 2)
						{
							<text>LUNCH</text>
						}
						else if (i == 3)
						{
							<text>SNACK</text>
						}
						else if (i == 4)
						{
							<text>DINNER</text>
						}
					</td>

					@for (int j = 0; j < 7; j++)
					{
						var mealIndex = j + (i * 7);
						<td>
							@if (mealIndex < Model.MealIds.Count && Model.MealIds[mealIndex] != null)
							{
								<text>@Model.Meals[mealIndex].Name</text>
								<button data-dietid="@Model.Id" data-index="@mealIndex" class="btn btn-danger btn-sm deleteBtn" type="button"><i class="fa-solid fa-trash">&nbsp;</i></button>
							}
							else
							{
								<div style="display: flex; align-items: center;">
									<select asp-for="NewMealId" asp-items="Model?.AvailableMeals" class="form-select" style="margin-right: 10px;">
										<option>Select Meal</option>
									</select>
									<span asp-validation-for="NewMealId" class="text-danger"></span>
									<input type="submit" value="Add" class="btn btn-primary" />
								</div>

							}
						</td>
					}
				</tr>
			}
		</tbody>
	</table>

	<div>
		<a asp-action="Index">Back to List</a>
	</div>


	<form id="deleteForm" asp-action="RemoveMeal">
		<input type="hidden" id="dietId" name="dietId" />
		<input type="hidden" id="index" name="index" />
	</form>

	@section Scripts
 {
		<script>
			$(function () {

				$('.deleteBtn').click(function (e) {
					swal(
						{
							title: "Are you sure?",
							text: "Are you sure you want to delete this record?",
							icon: "warning",
							buttons: true,
							dangerMode: true
						}
					).then((confirm) => {
						if (confirm) {
							var btn = $(this);
							var dietId = btn.data("dietid");
							var index = btn.data("index");
							$('#dietId').val(dietId);
							$('#index').val(index);
							$('#deleteForm').submit();
						}
					}
					);
				});
			});
		</script>
	}
