@model TrainingPlanApp.Web.Models.DietManageMealsVM

@{
    ViewData["Title"] = "ManageMeals";
    var mealsPerDay = 5; // Liczba posiłków na dzień (śniadanie, II śniadanie, lunch, przekąska, kolacja)
}

<h1>ManageMeals</h1>

<div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th></th> <!-- Nagłówek dla posiłków -->
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
            <th>Sunday</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < mealsPerDay; i++)
        {
            <tr>
                <td>
                    @if (i == 0)
                    {
                        <text>BREAKFAST</text>
                    }
                    else if (i == 1)
                    {
                        <text>II BREAKFAST</text>
                    }
                    else if (i == 2)
                    {
                        <text>LUNCH</text>
                    }
                    else if (i == 3)
                    {
                        <text>SNACK</text>
                    }
                    else if (i == 4)
                    {
                        <text>DINNER</text>
                    }
                </td>

                @for (int day = 0; day < 7; day++)
                {
                    var mealIndex = day + (i * 7); // Indeks posiłku w liście
                    <td>
                        @if (Model.MealIds != null && mealIndex < Model.MealIds.Count && Model.MealIds[mealIndex] != null)
                        {
                            <text>@Model.Meals[mealIndex].Name</text>
                        }
                        else
                        {
                            <text>-</text> <!-- Puste pole, jeśli brak posiłku -->
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
