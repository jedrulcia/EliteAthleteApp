@model TrainingPlanApp.Web.Models.DietManageMealsVM

@{
    ViewData["Title"] = "ManageMeals";
}

<h1>ManageMeals</h1>

<div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th></th>
            <th>Monday</th>
            <th>Tuesday</th>
            <th>Wednesday</th>
            <th>Thursday</th>
            <th>Friday</th>
            <th>Saturday</th>
            <th>Sunday</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < 5; i++)
        {
            <tr>
                <td>
                    @if (i == 0)
                    {
                        <text>BREAKFAST</text>
                    }
                    else if (i == 1)
                    {
                        <text>II BREAKFAST</text>
                    }
                    else if (i == 2)
                    {
                        <text>LUNCH</text>
                    }
                    else if (i == 3)
                    {
                        <text>SNACK</text>
                    }
                    else if (i == 4)
                    {
                        <text>DINNER</text>
                    }
                </td>

                @for (int j = 0; j < 7; j++)
                {
                    var mealIndex = j + (i * 7);
                    <td>
                        @if (mealIndex < Model.MealIds.Count && Model.MealIds[mealIndex] != null)
                        {
                            <text>@Model.Meals[mealIndex].Name</text>
                        }
                        else
                        {
                            <text>-</text>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>
