@using EliteAthleteApp.Models.TrainingExercise

@model IEnumerable<TrainingExerciseVM>

@{
	ViewData["Title"] = "ExercisePrivate";
}

<table class="table text-white table-dark">
	<thead>
		<tr>
			<th style="width:50%">
				<strong>@Html.DisplayNameFor(model => model.Name)</strong>
			</th>
			<th style="width:20%">
				<strong>@Html.DisplayNameFor(model => model.ExerciseCategory.Name)</strong>
			</th>
			<th style="width:20%">
				<strong>@Html.DisplayNameFor(model => model.ExerciseMuscleGroup.Name)</strong>
			</th>
			<th style="width:10%"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ExerciseCategory.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ExerciseMuscleGroup.Name)
				</td>
				<td class="text-end">
					<div class="dropdown">
						<button class="btn btn-outline-primary-a btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
							<strong>Actions</strong>
						</button>
						<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
							<li>
								<button data-exercisemediaid="@item.ExerciseMediaVM.Id"
										class="dropdown-item editMediaBtn">
									<i class="bi bi-images"></i>Edit Media
								</button>
							</li>
							<li>
								<button data-editexerciseid="@item.Id"
										class="dropdown-item editBtn">
									<i class="bi bi-pencil"></i>Edit
								</button>
							</li>
							<li>
								<button data-detailsexerciseid="@item.Id"
										class="dropdown-item detailsBtn">
									<i class="bi bi-info-circle"></i>Details
								</button>
							</li>
							<li>
								<button data-deleteexerciseid="@item.Id"
										class="dropdown-item deleteBtn">
									<i class="bi bi-trash"></i>Delete
								</button>
							</li>
						</ul>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
