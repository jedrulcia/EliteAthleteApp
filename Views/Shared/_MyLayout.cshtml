@using Microsoft.AspNetCore.Identity
@using EliteAthleteApp.Configurations.Constants
@using EliteAthleteApp.Data
@using System.Security.Claims
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager



<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - EliteAthleteApp</title>

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css" />
	<link href="https://fonts.googleapis.com/css2?family=Agdasima:wght@300;400;600;700&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
	<link href="~/css/style.min.css" rel="stylesheet">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>


<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black box-shadow mb-3">
			<div class="container-sm custom-container">
				<strong>
					<a class="navbar-brand text-logo" asp-area="" asp-controller="Home" asp-action="Index">Elite Athlete</a>
				</strong>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<div class="flex-grow-1 d-flex justify-content-center">
						<ul class="navbar-nav">
							@if (User.IsInRole("Administrator") || User.IsInRole("Coach"))
							{
								<li class="nav-item text-primary mx-2">
									<strong>
										<a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="Index">A D M I N</a>
									</strong>
								</li>
							}
							@if (User.IsInRole("Administrator") || User.IsInRole("Coach"))
							{
								<li class="nav-item text-primary mx-2">
									<strong>
										<a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="Index">A T H L E T E S</a>
									</strong>
								</li>
								<li class="nav-item text-primary mx-2">
									<strong>
										<a class="nav-link text-white" asp-controller="Home" asp-action="Panel">M Y &nbsp; P A N E L</a>
									</strong>
								</li>
								<li class="nav-item text-primary mx-2">
									<strong>
										<a class="nav-link text-white" asp-area="" asp-controller="TrainingExercises" asp-action="Index">E X E R C I S E S</a>
									</strong>
								</li>
							}
							@if (User.IsInRole(Roles.User))
							{
								<li class="nav-item text-primary mx-2">
									<strong>
										<a class="nav-link text-white" asp-controller="Users" asp-action="Panel">M Y &nbsp; P A N E L</a>
									</strong>
								</li>
							}
						</ul>
					</div>
					<ul class="navbar-nav text-black">
						<li class="nav-item">
							<div class="dropdown">
								<button class="btn btn-outline-primary-a btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
									<strong>User</strong>
								</button>
								<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton">
									@if (SignInManager.IsSignedIn(User))
									{
										<li>
											<form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="~/">
												<button type="submit" class="dropdown-item text-black">
													<i class="bi bi-person-circle"></i>&nbsp; <strong>L O G O U T</strong>
												</button>
											</form>
										</li>
									}
									else
									{
										<li>
											<a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-person-circle"></i>&nbsp; R E G I S T E R</a>
										</li>
										<li>
											<a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login"><i class="bi bi-person-circle"></i>&nbsp; L O G I N</a>
										</li>
									}
									<li>
										<a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
											<i class="bi bi-gear">&nbsp;</i>S E T T I N G S
										</a>
									</li>
								</ul>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2024 - EliteAthleteApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Rules & Privacy Policy</a>
		</div>
	</footer>
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.7/dist/browser/signalr.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
	<script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
	<script src="https://code.jquery.com/ui/1.13.3/jquery-ui.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
	<script>
		$('a[data-toggle="tab"]').on('shown.bs.tab', function () {
			$($.fn.dataTable.tables(true)).DataTable().columns.adjust();
		});
	</script>
	<script>
		$(function () {
			$('.table').DataTable({
				pageLength: 10,
				pagingType: "full_numbers",
				scrollY: '480px',
				scrollCollapse: true
			});
		});
	</script>
	<script>
		$(function () {
			$(".datepicker").datepicker({
				dateFormat: "yy-mm-dd"
			});
		});
	</script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
