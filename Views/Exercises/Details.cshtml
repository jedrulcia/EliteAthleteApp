@model ExerciseVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details of @Model.Name </h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MainExerciseName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MainExerciseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MainExerciseNumberOfRepeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MainExerciseNumberOfRepeats)
        </dd>
        <dd class="col-sm-12">
            @{
                var mainVideoUrl = Model.MainExerciseVideoLink;
                var mainVideoId = mainVideoUrl.Split(new[] { "v=" }, StringSplitOptions.None)[1];
                var mainEmbedUrl = "https://www.youtube.com/embed/" + mainVideoId;
            }
            <iframe width="560" height="315" src="@mainEmbedUrl" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdditionalExerciseName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdditionalExerciseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdditionalExerciseNumberOfRepeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdditionalExerciseNumberOfRepeats)
        </dd>
        <dd class="col-sm-12">
            @{
                var additionalVideoUrl = Model.AdditionalExerciseVideoLink;
                var additionalVideoId = additionalVideoUrl.Split(new[] { "v=" }, StringSplitOptions.None)[1];
                var additionalEmbedUrl = "https://www.youtube.com/embed/" + additionalVideoId;
            }
            <iframe width="560" height="315" src="@additionalEmbedUrl" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OverallNumberOfSets)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OverallNumberOfSets)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-dark">Back to List</a>  &nbsp;
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.Id">Edit</a>
</div>
