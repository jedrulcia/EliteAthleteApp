@using TrainingPlanApp.Web.Models.Ingredient
@using TrainingPlanApp.Web.Constants

@model IngredientCreateVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name</h1>

<h4>Ingredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IngredientCategoryId" class="control-label"></label>
                <select asp-for="IngredientCategoryId" asp-items="Model?.AvailableIngredientCategories" class="form-select">
                    <option>Select Category</option>
                </select>
                <span asp-validation-for="IngredientCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Proteins" class="control-label"></label>
                <input asp-for="Proteins" class="form-control" />
                <span asp-validation-for="Proteins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carbohydrates" class="control-label"></label>
                <input asp-for="Carbohydrates" class="form-control" />
                <span asp-validation-for="Carbohydrates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fats" class="control-label"></label>
                <input asp-for="Fats" class="form-control" />
                <span asp-validation-for="Fats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuggestedPortion" class="control-label"></label>
                <input asp-for="SuggestedPortion" class="form-control" />
                <span asp-validation-for="SuggestedPortion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-dark">Back to List</a> &nbsp;
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

